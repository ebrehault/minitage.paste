#
# WSGI CONFIGURATION FILE
#

[DEFAULT]
debug=false
test_url=false

[composite:main]
use=egg:Paste#urlmap
/=zope

[pipeline:zope]
pipeline=$project

[app:$project]
use = egg:$project
conf=%(here)s/../parts/prod.zope.conf

[filter:exc]
# Change the last part from 'ajax' to 'pdb' for a post-mortem debugger
# on the console:
use = egg:z3c.evalexception#ajax

[server:main]
use = egg:Spawning
host = $address
port = $port
